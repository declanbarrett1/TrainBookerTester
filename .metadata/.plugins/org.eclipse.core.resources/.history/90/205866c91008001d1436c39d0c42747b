package com.declan.testscripts;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

public class test {

	public void changeTimeOfLeavingTrain() throws InterruptedException {
		List<WebElement> hours = driver.findElements(By.name("hours"));
			WebElement hoursLeaving = hours.get(0);
			Select minutesLeaving =new Select(driver.findElement(By.name("minutes")));
			hoursLeaving.sendKeys("12");
			minutesLeaving.selectByVisibleText("45");
			
			Thread.sleep(3000);
	
			WebElement hoursReturning = hours.get(1);
			Select minutesReturning =new Select(driver.findElement(By.id("3ec1a1ac-2f79-40b6-9afb-9872df824fd3")));
			hoursReturning.sendKeys("14");
			minutesReturning.selectByVisibleText("15");
			
			Thread.sleep(3000);
	}
//	
}
